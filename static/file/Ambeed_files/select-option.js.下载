

$(function(){
	$(".input").click(function(){
		$(this).parent().find(".select-opt").toggle();
	});
	
	$(".select-opt li").each(function(i,v){
		$(".select-opt li").click(function(){
			$(this).parent().siblings(".input").val($(this).find("span").html());
			hideLi();
		});
	});
	
	$(".input").blur(function(){
		setTimeout(hideLi,200);
	});

	$(".select-opt li").hover(function(){
		$(this).addClass("active").siblings().removeClass('active')
	})
		
});
 
 
 
function showLi(){
	$(".select-opt").show();
}
function hideLi(){
	$(".select-opt").hide();
}
 
